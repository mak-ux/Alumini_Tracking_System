<%- include('./partials/create_event.ejs')%>
   <!-- Navbar content -->
     <div class="container-fluid" style="padding: 10em; background-image:url(/images/mak.png);background-position:center;background-size:cover;background-repeat:no-repeat">
   
  
   </div>
 <!-- crosel content -->
 <section>
  <div class="gap redish high-opacity">
    <div class="content-bg-wrap" style="background: url(/images/resources/animate-bg.png)"></div>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="head-meta">
            <h5>Create Event</h5>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="container">
    <form method="post" action="/events/create-event" enctype="multipart/form-data">
      <div class="row">
        
          <div class="col-25">
            <label for="type">Event Type</label>
          </div>
          
          <div class="col-75">
            <select name="type">
              <option>Educational Event</option>
              <option>Sports Event</option>
              <option>Social</option>
            </select>
          </div>
      </div>
      <div class="row">
          <div class="col-25">
            <label for="position">Event Category</label>
          </div>
          
          <div class="col-75">
            <select name="category" id="">
              <option>Select Category</option>
              <option value="Workshop">Workshop</option>
              <option value="Hackathon">Hackathon</option>
              <option value="cultural">cultural</option>
            </select>
          </div>
      </div>

      <div class="row">
          <div class="col-25">
            <label for="name">Event Name</label>
          </div>
          <div class="col-75">
            <input type="text" placeholder="Event Name" name="name">
          </div>
      </div>

      

      <div class="row">
          <div class="col-25">
            <label for="description">Event Description</label>
          </div>
          <div class="col-75">
            <textarea id="subject" name="description" placeholder="Write description.." style="height:200px"></textarea>
          </div>
      </div>
      
      <div class="row">
          <div class="col-25">
            <label for="websiteURL">Event Url</label>
          </div>
          <div class="col-75"> 
            <input type="text" placeholder="Website URL" name="websiteURL">
          </div>
      </div>

      <div class="row">
          <div class="col-25">
            <label for="Date">Date</label>
          </div>
          <div class="col-75">
            <input style="width: 40%;padding: 5px 7px;; " type="date" name="date" id="subject" autocomplete="off">
            
          </div>
      </div>
      
      <div class="row">
        <div class="col-25">
          <label for="Date">Time</label>
        </div>
        <div class="col-75">
          <input type="text" placeholder="9:00" name="time">
          
        </div>
      </div>  
      <div class="row">
        <div class="col-25">
          <label for="Date">AM/PM</label>
        </div>
        <div class="col-75">
          <select name="clock">
            <option value="AM">AM</option>
            <option value="PM">PM</option>
          </select>
          
        </div>
      </div>  
      <div class="row">
        <div class="col-25">
          <label for="Date">Time Zone</label>
        </div>
        <div class="col-75">
          <select name="timezone">
            <option value="US(UTC-8)">US (UTC-8)</option>
            <option value="UK (UTC-0)">UK (UTC-0)</option>
          </select>
          
        </div>
      </div>  
      <div class="row">
        <div class="col-25">
          <label for="image">Upload Image</label>
        </div>
        <div class="col-75">
          <input type="file" multiple="multiple"  accept="image/*" name="image" >
        </div>
    </div>
      <div class="row">
          <div class="col-25">
            <label for="Date"></label>
          </div>
          <div class="col-75">
            <input id="subject" type="submit" value="Create Now">
            
          </div>
      </div>
    </form>
</div>


 
 
